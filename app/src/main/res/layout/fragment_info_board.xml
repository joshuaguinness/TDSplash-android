            android:fontFamily="sans-serif-condensed"
            android:textColor="#FFF"
            android:text="@string/blank_infoboard_message"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/period1"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:text="@string/blank_infoboard_period_name"
                android:layout_width="0dp"
                android:id="@+id/period1Name"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:textColor="#FFF"
                android:layout_height="30dp"
                android:textAllCaps="true"
                android:layout_margin="4dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:text="@string/blank_infoboard_time"
                android:layout_width="0dp"
                android:id="@+id/period1Time"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:textColor="#FFF"
